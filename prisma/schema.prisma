generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  sub String @unique

  email String

  name String
  cpf String
  phone String

  charges Charge[]
}

enum ChargePaymentMethod {
  CREDIT_CARD
  BOLETO
  PIX
}

enum ChargeStatus {
  PENDING
  PAID
  EXPIRED
}

model Charge {
  id String @id @default(uuid())
  createdAt DateTime @default(now())

  value Float
  coin String
  paymentMethod ChargePaymentMethod @default(PIX)
  status ChargeStatus @default(PENDING)

  pixCopyCole String?

  boletoCode String?

  cardInstallments Int?

  customerId String
  customer Customer @relation(fields: [customerId], references: [id])
}